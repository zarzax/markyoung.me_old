<h1>Listing portfolios</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th>Description</th>
    <th>Image url</th>
  </tr>

<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%=h portfolio.name %></td>
    <td><%=h portfolio.summary %></td>
    <td><%=h portfolio.description %></td>
    <td><%=h portfolio.image_url %></td>
    <td><%= link_to 'Show', portfolio %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New portfolio', new_portfolio_path %>